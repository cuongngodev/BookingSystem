@model IEnumerable<BookingSystem.Data.Entities.Service>

@{
    ViewData["Title"] = "Service List";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <!-- Clicking toggles name ascending/descending -->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                    Name
                </a>
            </th>
            <th>
                <!-- Clicking toggles price ascending/descending -->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DurationSortParm"]">
                    Duration
                </a>
            </th>
            <th>
                <!-- Clicking toggles price ascending/descending -->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">
                    Price
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Duration
            </td>
            <td>
                @item.Price.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
