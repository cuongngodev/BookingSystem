@model BookingSystem.Data.Entities.Service

@{
    ViewData["Title"] = "Service Details";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card glass-card shadow-lg p-4">

                <!-- Header -->
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-white">
                        🔍 Service Details
                    </h2>
                    <p class="text-light-50 mb-0">
                        View complete information about this service below.
                    </p>
                </div>

                <!-- Service Info -->
                <dl class="row text-light">
                    <dt class="col-sm-4 fw-semibold">
                        <i class="bi bi-tag me-1 text-info"></i> Name
                    </dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-semibold">
                        <i class="bi bi-clock-history me-1 text-info"></i> Duration
                    </dt>
                    <dd class="col-sm-8">@Model.Duration min</dd>

                    <dt class="col-sm-4 fw-semibold">
                        <i class="bi bi-currency-dollar me-1 text-info"></i> Price
                    </dt>
                    <dd class="col-sm-8">$@Model.Price</dd>

                    <dt class="col-sm-4 fw-semibold">
                        <i class="bi bi-card-text me-1 text-info"></i> Description
                    </dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>

                <!-- Divider -->
                <hr class="border-light opacity-25" />

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2">
                    <a class="btn btn-outline-light rounded-pill px-4"
                       asp-controller="Appointments"
                       asp-action="Create"
                       asp-route-serviceId="@Model.Id">
                        <i class="bi bi-calendar-plus me-1"></i> Book Appointment
                    </a>

                    <div class="d-flex gap-2">
                        <a class="btn btn-warning rounded-pill px-4"
                           asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>

                        <a class="btn btn-outline-light rounded-pill px-4"
                           asp-action="Index">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        background: linear-gradient(135deg, #16222A, #3A6073);
        font-family: 'Poppins', sans-serif;
        color: white;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        color: white;
    }

    .text-light-50 {
        color: rgba(255, 255, 255, 0.6);
    }

    .btn-outline-light:hover {
        background-color: white;
        color: #16222A;
    }

    .btn-warning {
        background-color: #f1c40f;
        border: none;
        color: #16222A;
        transition: 0.3s;
    }

        .btn-warning:hover {
            background-color: #f39c12;
            transform: scale(1.03);
        }

    dl dt {
        margin-top: 10px;
    }

    dl dd {
        margin-bottom: 10px;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
