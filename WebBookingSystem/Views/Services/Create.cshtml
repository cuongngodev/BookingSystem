@model BookingSystem.Data.Entities.Service

@{
    ViewData["Title"] = "Create New Service";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card glass-card shadow-lg p-4">

                <!-- Header -->
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-white">
                        ➕ Create New Service
                    </h2>
                    <p class="text-light-50 mb-0">
                        Fill in the form below to add a new service to your system.
                    </p>
                </div>

                <!-- Form -->
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-light fw-semibold">
                            <i class="bi bi-tag me-1"></i> Service Name
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg bg-light bg-opacity-10 text-white border-0" placeholder="Enter service name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Duration" class="form-label text-light fw-semibold">
                            <i class="bi bi-clock me-1"></i> Duration (minutes)
                        </label>
                        <input asp-for="Duration" class="form-control form-control-lg bg-light bg-opacity-10 text-white border-0" placeholder="Enter duration..." />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label text-light fw-semibold">
                            <i class="bi bi-currency-dollar me-1"></i> Price ($)
                        </label>
                        <input asp-for="Price" class="form-control form-control-lg bg-light bg-opacity-10 text-white border-0" placeholder="Enter price..." />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label text-light fw-semibold">
                            <i class="bi bi-card-text me-1"></i> Description
                        </label>
                        <textarea asp-for="Description" class="form-control bg-light bg-opacity-10 text-white border-0" rows="3" placeholder="Enter service description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success rounded-pill px-4 shadow-sm">
                            <i class="bi bi-plus-circle me-1"></i> Create Service
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        font-family: 'Poppins', sans-serif;
        color: white;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        color: white;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .form-control:focus {
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25);
    }

    .btn-success {
        background-color: #2ecc71;
        border: none;
        transition: 0.3s;
    }

        .btn-success:hover {
            background-color: #27ae60;
            transform: scale(1.03);
        }

    .btn-outline-light:hover {
        background-color: white;
        color: #1e3c72;
    }

    .text-light-50 {
        color: rgba(255, 255, 255, 0.6);
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
