@using WebBookingSystem.Data.Entities
@model WebBookingSystem.Data.Entities.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
}

<h1>Edit Appointment</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Display service name (read-only) *@
            <div class="form-group mb-3">
                <label class="control-label">Service</label>
                <input type="text" value="@Model.Service?.Name" class="form-control" disabled />
                <input type="hidden" asp-for="ServiceId" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="AppointmentTime" class="control-label"></label>
                <input asp-for="AppointmentTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<AppointmentStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}