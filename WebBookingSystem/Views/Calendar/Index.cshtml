@{
    ViewData["Title"] = "Calendar";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/interaction.min.js"></script>

<div class="container mt-3">
    <h2>Bookings Calendar</h2>
    <div id="calendar"></div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr', // Optional: set locale
                events: '/Calendar/GetEvents' // Your controller endpoint
                headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
            }
            });

            calendar.render();
        });
    </script>

</div>

<!-- Read-only calendar script -->
