@model WebBookingSystem.Models.ProfileUpdateViewModel

@{
    ViewData["Title"] = "Update Your Profile";
}

<section class="profile-update-section py-5">
    <div class="container position-relative">

        <!-- Floating accents -->
        <div class="floating-accent accent1"></div>
        <div class="floating-accent accent2"></div>
        <div class="floating-accent accent3"></div>
        <div class="floating-accent accent4"></div>

        <h2 class="text-center fw-bold mb-5 text-pink-gradient">Update Your Profile</h2>

        <div class="card shadow-lg rounded-4 mx-auto p-4 gradient-card" style="max-width:500px;">
            <form asp-action="Update" method="post">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label fw-semibold"></label>
                    <div class="input-icon">
                        <i class="bi bi-person-fill"></i>
                        <input asp-for="FirstName" class="form-control form-control-lg ps-5" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-semibold"></label>
                    <div class="input-icon">
                        <i class="bi bi-person-fill"></i>
                        <input asp-for="LastName" class="form-control form-control-lg ps-5" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <div class="input-icon">
                        <i class="bi bi-envelope-fill"></i>
                        <input asp-for="Email" class="form-control form-control-lg ps-5" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-semibold"></label>
                    <div class="input-icon">
                        <i class="bi bi-person-badge-fill"></i>
                        <input asp-for="UserName" class="form-control form-control-lg ps-5" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <div class="input-icon">
                        <i class="bi bi-lock-fill"></i>
                        <input asp-for="Password" class="form-control form-control-lg ps-5" type="password"
                               placeholder="Leave empty to keep current password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center gap-2 mt-4">
                    <button type="submit" class="btn btn-gradient shadow-sm btn-lg">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Gradient card background */
    .gradient-card {
        background: linear-gradient(135deg, #ffe6f2, #fdd0ff);
        border: none;
    }

    /* Pink gradient text */
    .text-pink-gradient {
        background: linear-gradient(90deg, #ff6ec7, #c77dff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Buttons */
    .btn-gradient {
        background: linear-gradient(90deg, #c77dff, #ff6ec7);
        color: white;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #a64dd6, #ff3fc0);
            transform: scale(1.05);
        }

    /* Floating accents */
    .floating-accent {
        position: absolute;
        border-radius: 50%;
        opacity: 0.15;
        z-index: 0;
        animation: floatPulse 6s ease-in-out infinite alternate;
    }

    /* Individual sizes/colors */
    .accent1 {
        width: 150px;
        height: 150px;
        background: #c77dff;
        top: -30px;
        left: -30px;
        animation-delay: 0s;
    }

    .accent2 {
        width: 120px;
        height: 120px;
        background: #ff6ec7;
        bottom: -20px;
        right: -20px;
        animation-delay: 1s;
    }

    .accent3 {
        width: 100px;
        height: 100px;
        background: #ff99d1;
        top: 50%;
        left: -50px;
        animation-delay: 0.5s;
    }

    .accent4 {
        width: 80px;
        height: 80px;
        background: #d18eff;
        bottom: 40%;
        right: -40px;
        animation-delay: 1.5s;
    }

    /* Floating and pulsing animation */
    @@keyframes floatPulse {
        0% {
            transform: translateY(0px) scale(1);
            opacity: 0.15;
        }

        50% {
            transform: translateY(-20px) scale(1.05);
            opacity: 0.2;
        }

        100% {
            transform: translateY(0px) scale(1);
            opacity: 0.15;
        }
    }


    /* Input icons */
    .input-icon {
        position: relative;
    }

        .input-icon i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #c77dff;
        }
</style>
