@{
    ViewData["Title"] = "About Us";
    Layout = "_Layout";
}

<div class="about-page container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <!-- Title -->
            <h1 class="fw-bold text-white mb-3">
                💼 About Our Booking System
            </h1>
            <p class="text-light-50 lead mb-5">
                Designed to simplify appointments and enhance productivity —
                our platform helps businesses manage their services, clients,
                and schedules efficiently with a clean, modern interface.
            </p>
        </div>
    </div>

    <!-- Mission Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="card glass-card shadow-lg p-4">
                <h3 class="fw-semibold text-white mb-3">
                    🌟 Our Mission
                </h3>
                <p class="text-light-50">
                    We aim to deliver an intuitive, reliable, and secure booking experience
                    for both customers and administrators. Whether it's scheduling a salon visit,
                    reserving a consultation, or managing daily operations — our system empowers users
                    to focus on what truly matters: <strong>their business and clients</strong>.
                </p>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="card glass-card shadow-lg p-4">
                <h3 class="fw-semibold text-white mb-4">
                    👩‍💻 Meet the Team
                </h3>
                <div class="row text-center">
                    <div class="col-md-4 mb-4">
                        <img src=""
                             class="rounded-circle shadow-sm mb-3 team-img">
                        <a href="https://github.com/cuongngodev" class="text-white fw-bold">Cuong Ngo</a>
                    </div>
                    <div class="col-md-4 mb-4">
                        <img src=""
                             class="rounded-circle shadow-sm mb-3 team-img" />
                        <a href="https://github.com/Linyue-dev" class="text-white fw-bold">Linyue</a>
                        
                    </div>
                    <div class="col-md-4 mb-4">
                        <img src=""
                             class="rounded-circle shadow-sm mb-3 team-img">
                        <a href="https://github.com/AliLabiba" class="text-white fw-bold">Labiba</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tech Stack -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card glass-card shadow-lg p-4 text-center">
                <h3 class="fw-semibold text-white mb-3">
                    ⚙️ Built With
                </h3>
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <span class="badge bg-primary px-3 py-2">ASP.NET Core MVC</span>
                    <span class="badge bg-success px-3 py-2">Entity Framework Core</span>
                    <span class="badge bg-info px-3 py-2 text-dark">C#</span>
                    <span class="badge bg-warning px-3 py-2 text-dark">Bootstrap 5</span>
                    <span class="badge bg-light px-3 py-2 text-dark">JavaScript / FullCalendar</span>
                    <span class="badge bg-danger px-3 py-2">SQL Server</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        font-family: 'Poppins', sans-serif;
        color: white;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
        }

    .team-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 3px solid rgba(255, 255, 255, 0.5);
    }

    .text-light-50 {
        color: rgba(255, 255, 255, 0.7);
    }

    .badge {
        font-size: 1rem;
        border-radius: 12px;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
