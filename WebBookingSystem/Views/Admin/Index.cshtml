@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="admin-dashboard container-fluid py-5 px-4">

    <!-- Header / Hero section -->
    <div class="hero-section text-center mb-5">
        <h1 class="fw-bold display-5 text-white">Welcome Back, Admin 👋</h1>
        <p class="lead text-light mb-4">Manage your platform’s services, users, and appointments with ease.</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="@Url.Action("Index", "Users")" class="btn btn-lg btn-light rounded-pill shadow-sm px-4">👥 Manage Users</a>
            <a href="@Url.Action("Manage", "Appointments")" class="btn btn-lg btn-light rounded-pill shadow-sm px-4">📅 View Appointments</a>
            <a href="@Url.Action("Index", "Services")" class="btn btn-lg btn-light rounded-pill shadow-sm px-4">🧰 Manage Services</a>
        </div>
    </div>

    <!-- Section title -->
    <h2 class="fw-semibold text-white mb-4 text-center">Quick Overview</h2>

    <!-- Animated glass cards -->
    <div class="row g-4 justify-content-center">
        <div class="col-md-3">
            <div class="glass-card text-center p-4">
                <i class="bi bi-people display-4 mb-3 text-info"></i>
                <h5 class="fw-semibold">Total Users</h5>
                <p class="fs-4 fw-bold text-light">128</p>
                <small class="text-secondary">+4 today</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="glass-card text-center p-4">
                <i class="bi bi-calendar-check display-4 mb-3 text-success"></i>
                <h5 class="fw-semibold">Appointments</h5>
                <p class="fs-4 fw-bold text-light">56</p>
                <small class="text-secondary">+3 confirmed</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="glass-card text-center p-4">
                <i class="bi bi-gear display-4 mb-3 text-warning"></i>
                <h5 class="fw-semibold">Active Services</h5>
                <p class="fs-4 fw-bold text-light">12</p>
                <small class="text-secondary">2 updated recently</small>
            </div>
        </div>
    </div>

    <!-- Action area -->
    <div class="mt-5 p-4 glass-panel">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h4 class="fw-semibold text-light mb-3 mb-md-0">Recent Admin Actions</h4>
            <a href="#" class="btn btn-outline-light rounded-pill px-3">View Logs</a>
        </div>
        <hr class="text-light">
        <ul class="list-unstyled mb-0">
            <li class="py-2 text-light">✅ <b>Service added:</b> “Hair Treatment Deluxe”</li>
            <li class="py-2 text-light">👤 <b>User promoted:</b> Jane Doe → Employee</li>
            <li class="py-2 text-light">🗓 <b>Appointment rescheduled:</b> 5:30 PM → 6:00 PM</li>
        </ul>
    </div>
</div>

<!-- Styling -->
<style>
    body {
        background: linear-gradient(135deg, #2a2d3e, #1b1c27);
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(0, 183, 255, 0.2), rgba(102, 16, 242, 0.2));
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 3rem 2rem;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
        color: white;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

    .glass-panel {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    }

    .text-gradient {
        background: linear-gradient(90deg, #00bfff, #ff7af6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-light {
        font-weight: 500;
        transition: 0.2s ease;
    }

        .btn-light:hover {
            transform: scale(1.05);
            background: #ffffff !important;
            color: #000 !important;
        }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
